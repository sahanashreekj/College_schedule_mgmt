    <body>
       
        <div class="flexer">
        <div class="wrapper">
            <header>Faculty Login</header>
            <form method="post" action="/faclogin" target="_blank">
                <div class="field-username">
                 <div class="input-area">
                    <input type="text" placeholder="Your username"> 
                    <i class="icon fa fa-user-circle"></i>    
                    <i id="err" class="  err-icon fas fa-exclamation-circle"></i> 
                </div>  
                 <div class=" error-txt">Username can't be blank.</div> 
                    
                </div>
                <div class="field-password">
                    <div class="input-area">
                        <input type="password" placeholder="Password" name="idf">
                        <i class="icon fas fa-lock"></i>
                        <i id="err" class="err-icon fas fa-exclamation-circle"></i>

                    </div>
                    <div id="err"class=" error-txt">Oops!Password please.</div> 
                </div>
                <div class="pass-link"><a href="#">Forgot password?</a></div>
            
                <input type="submit" value="Log in">
    
            </form>
            <div class="Contact-admin">Having trouble logging in?<a href="#">Contact Us</a></div>
        </div>
        </div>
    </body>
</html>